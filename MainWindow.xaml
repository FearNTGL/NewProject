<Window x:Class="BukStat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BukStat"
        xmlns:vm="clr-namespace:BukStat.ViewModel"
        Title="{Binding Title }"
        Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowsViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Optons"></MenuItem>
            <MenuItem Header="View"></MenuItem>
        </Menu>
        <TabControl >
            <TabItem Header="Base"></TabItem>
            <TabItem Header="**XY**" ></TabItem>
            <TabItem Header="Option"></TabItem>
        </TabControl>

    </DockPanel>
</Window>
